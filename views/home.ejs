<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
  <title>Home Page</title>
</head>
<body>
  <%- include('./partials/nav') %>

  <div class="container mt-4">
    <h1 class="text-center mb-4">Welcome to My Blog</h1>

    <div class="row g-4">
      <% blogs.forEach(blog => { %>
        <div class="col-md-4 col-sm-6">
          <div class="card h-100 shadow-sm">
            <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="Blog image">
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <p class="card-text text-muted"><%= blog.body.substring(0, 100) %>...</p>
              <a href="/blog/<%= blog._id %>" class="btn btn-primary btn-sm">Read More</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <%- include('./partials/scripts') %>
</body>
</html>
