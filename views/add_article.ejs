<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
    <title>Add New Article</title>
</head>
<body>
    <%- include('./partials/nav') %>




    <div class="container mt-3">
        <form action="" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title">Title</label>
            <input type="text" class="form-control" id="title"  required name="title" placeholder="Title">
        </div>

        <div class="mb-3">
            <label for="body">Description</label>
            <textarea type="text" class="form-control" id="body" required name="content" placeholder="textarea"></textarea>
        </div>

        <div class="mb-3">
            <label for="image">Cover Image</label>
            <input type="file" class="form-control" id="image" required name="" placeholder="Image">
        </div>

        <button class="btn btn-info">Submit</button>
        </form>
    </div>

    <%- include('./partials/scripts') %>
</body>

</html>